<html>
<%
	var intro = activity.get('intro');
	var richContent = activity.get('richContent');
 %>
  <head>
	  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
	  <meta name="viewport" content="user-scalable=no, initial-scale=1, width=device-width, minimal-ui">
	  <title>活动描述</title>
	  <style>
		  body {
			  font-size: 62.5%;
		  }
		  .container {
			  margin: 0px auto;
			  padding: 10px;
			  max-width: 640px;
			  font-size: 1.6em;
			  line-height: 1.3;
		  }
		  pre {
			  font-family:"微软雅黑";
			  white-space: pre-wrap;
			  word-wrap: break-word;
		  }
	  </style>
  </head>
  <body>
	<div class='container'>
		<% if (richContent) { %>
			<p><%-intro%></p>
		<% } else { %>
			<pre><%-intro%></pre>
		<% } %>
	</div>
  </body>
</html>
